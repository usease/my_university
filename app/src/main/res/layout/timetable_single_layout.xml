<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    android:layout_marginTop="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/timetable_single_color"
            android:layout_width="8dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:background="@android:color/holo_blue_dark" />





        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/timetable_single_color"
            android:id="@+id/timtable_linear_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:alpha="0.5"
                    android:src="@drawable/time_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:textSize="12dp"
                    android:id="@+id/timetable_time"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="9.00-10.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="-5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:alpha="0.5"
                    android:layout_gravity="center"
                    android:src="@drawable/home_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:textSize="12dp"
                    android:id="@+id/timetable_room"
                    android:maxLength="14"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="ATB 221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageButton
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="5dp"
                    android:id="@+id/timetable_single_notification_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/notification_icon_off" />


                <ImageButton

                    android:id="@+id/timetable_single_edit_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/delete_icon" />


            </LinearLayout>





        </LinearLayout>

        <TextView
            android:maxLength="35"
            android:maxLines="1"
            android:id="@+id/timetable_module_name"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/timtable_linear_layout"
            android:layout_toRightOf="@id/timetable_single_color"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:text="Fundamentals of Programming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_below="@id/timetable_module_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/timetable_single_color"
            android:id="@+id/timtable_linear_layout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <ImageView
                    android:layout_gravity="center"
                    android:alpha="0.5"
                    android:src="@drawable/book_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:textSize="12dp"
                    android:id="@+id/timetable_type"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Lecture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="-35dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:alpha="0.5"
                    android:layout_gravity="center"
                    android:src="@drawable/person_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:textSize="12dp"
                    android:id="@+id/timetable_teacher"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Mikhail Shpirko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>








        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>

